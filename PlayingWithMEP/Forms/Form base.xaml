<Window x:Name="CriacaoCircuitosForm" x:Class="AutoEletrica.FormName"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AutoEletrica"
             mc:Ignorable="d"  Width="580" Height="285" MinHeight="280" MinWidth="580" MaxWidth="580" MaxHeight="280" HorizontalContentAlignment="Center">
    <Grid Margin="0,10,0,-201" Background="LightGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Grid Grid.ColumnSpan="2">
            <Label x:Name="Titulo" Content="Criação de circuito" VerticalAlignment="Top"  FontFamily="Cascadia Mono" FontSize="18" FontWeight="Bold" Background="LightYellow" HorizontalAlignment="Right" Width="578" Grid.Row="0" HorizontalContentAlignment="Center"/>
            <Label Content="Nome/Descrição:" Background="White" Margin="0,36,458,0" HorizontalContentAlignment="Center" FontFamily="Cascadia Mono" FontWeight="Bold" VerticalContentAlignment="Center" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="122"/>
            <TextBox x:Name="NomeCircuitoTxtbox" Margin="0,36,289,0" TextWrapping="Wrap" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="169" Height="25" VerticalAlignment="Top"/>
            <Label Content="Tipo de carga:" Background="White" Margin="0,36,164,0" HorizontalContentAlignment="Center" FontFamily="Cascadia Mono" FontWeight="Bold" VerticalContentAlignment="Center" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="122"/>
            <ComboBox x:Name="TipoCargaComboBox" Margin="0,37,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="164"/>
            <Label Content="Tipo de Ligação:" Background="White" Margin="0,66,458,0" HorizontalContentAlignment="Center" FontFamily="Cascadia Mono" FontWeight="Bold" VerticalContentAlignment="Center" HorizontalAlignment="Right" Width="120" Height="25" VerticalAlignment="Top"/>
            <ComboBox x:Name="TipoDeLigacaoComboBox" Margin="0,67,290,0" HorizontalAlignment="Right" Width="168" Height="24" VerticalAlignment="Top"/>
            <Label Content="Tensão:" Background="White" Margin="0,66,165,0" HorizontalContentAlignment="Center" FontFamily="Cascadia Mono" FontWeight="Bold" VerticalContentAlignment="Center" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="121"/>
            <ComboBox x:Name="TensaoComboBox" Margin="0,67,0,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="164"/>
            <Label Content="Quadro de Distribuição:" Background="White" Margin="0,105,405,0" HorizontalContentAlignment="Center" FontFamily="Cascadia Mono" FontWeight="Bold" VerticalContentAlignment="Center" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="173"/>
            <ComboBox x:Name="QDComboBox" Margin="0,105,237,0" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="168"/>
            <Button x:Name="SelecionarQDBtn" Content="Selecionar no projeto" Margin="0,105,26,0" Click="Button_Click" FontFamily="Cascadia Mono" Height="24" VerticalAlignment="Top" HorizontalAlignment="Right" Width="176"/>
            <Label Content="Ou" HorizontalAlignment="Right" Margin="0,104,207,0" VerticalAlignment="Top"/>
            <Button x:Name="AdicionarDispBtn" Background="LightGreen" Content="Adicionar" Margin="0,335,321,0" HorizontalAlignment="Right" Width="72" Height="33" VerticalAlignment="Top" FontFamily="Cascadia Code" FontWeight="Bold"/>
            <Button x:Name="RemoverDispBtn" Background="Red" Content="Remover" Margin="0,335,184,0" RenderTransformOrigin="-0.58,-0.933" HorizontalAlignment="Right" Width="72" Height="33" VerticalAlignment="Top" FontFamily="Cascadia Code" FontWeight="Bold"/>
            <Label Content="Modificar elementos do circuito:" Background="White" Margin="0,305,0,0" HorizontalContentAlignment="Center" FontFamily="Cascadia Mono" FontWeight="Bold" VerticalContentAlignment="Center" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" Width="240"/>
            <Button x:Name="CriarCircBtn" Content="Criar circuito" HorizontalAlignment="Center" Margin="0,382,0,0" Width="560" Height="45" VerticalAlignment="Top" FontFamily="Cascadia Code"/>
            <CheckBox Content="Tem DR?" HorizontalAlignment="Left" Height="19" Margin="249,158,0,0" VerticalAlignment="Top" Width="94" Checked="CheckBox_Checked"/>
            <GroupBox HorizontalAlignment="Center" Height="91" Header="GroupBox" Margin="0,177,0,0" VerticalAlignment="Top" Width="560"/>
            <Label Content="Label" HorizontalAlignment="Left" Margin="24,197,0,0" VerticalAlignment="Top"/>
        </Grid>

    </Grid>
</Window>
